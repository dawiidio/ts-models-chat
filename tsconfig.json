{
    "exclude": ["**/*.spec.ts"],
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2021"],
        "types": ["node"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "declaration": true,
        "paths": {
            "~/*": ["src/*"]
        },
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "removeComments": true,
        "rootDir": "src",
        "module": "NodeNext",
        "outDir": "lib",
        "moduleResolution": "NodeNext",
        "target": "ES2022"
    }
}
